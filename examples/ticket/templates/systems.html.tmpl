<div id="form">
	<div class="form-group row">
		<label for="ticketTypeFormSelect" class="col-sm-2 col-form-label">Issue Type</label>
		<div class="col-sm-10">
			<select class="form-control" name="ticket-type" id="ticketTypeFormSelect" onchange="treetop.submit(forms.getFormForm)" required="required">
				<option>Task</option>
				<option>Bug</option>
				<option>Epic</option>
				<option>Wish List</option>
			</select>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-2">After</div>
		<div class="col-sm-10">
			<div class="form-check">
				<input class="form-check-input" type="radio" name="after" id="after2" value="view-ticket" checked>
				<label class="form-check-label" for="after2">
					View newly created issue
				</label>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" name="after" id="after1" value="create-another">
				<label class="form-check-label" for="after1">
					Create another ticket
				</label>
			</div>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-sm-12 text-right">
			<button type="submit" class="btn btn-muted">Cancel</button>
			<button type="submit" class="btn btn-primary">Create Report</button>
		</div>
	</div>
</div>