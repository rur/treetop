<div id="form-message" class="row justify-content-end">
	{{ if .Message }}
	{{ if eq .Level 0 }}
	<div class="alert alert-info col-sm-9">
		<h6 class="alert-heading">{{ .Title }}</h6>
		<p>{{ .Message }}</p>
	</div>
	{{ end }}
	{{ if eq .Level 1 }}
	<div class="alert alert-warning col-sm-9">
		<h6 class="alert-heading">{{ .Title }}</h6>
		<p>{{ .Message }}</p>
	</div>
	{{ end }}
	{{ if eq .Level 2 }}
	<div class="alert alert-danger col-sm-9">
		<h6 class="alert-heading">{{ .Title }}</h6>
		<p>{{ .Message }}</p>
	</div>
	{{ end }}
	{{ end }}

</div>