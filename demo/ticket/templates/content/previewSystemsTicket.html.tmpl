<div id="preview">
	<div class="card mb-4">
		<h5 class="card-header">Systems/IT Ticket <strong class="badge badge-secondary float-right">SYS_###</strong></h5>
		<div class="card-body">
			<a href="{{ .EditLink }}" class="ml-3 float-right btn btn-sm btn-outline-secondary">Edit</a>
			<div class="media mb-3">
				<svg class="mr-2" style="fill: #AAA" viewBox="0 0 14 16" version="1.1" width="1.6rem" height="1.6rem" aria-hidden="true"><path fill-rule="evenodd" d="M7 2.3c3.14 0 5.7 2.56 5.7 5.7s-2.56 5.7-5.7 5.7A5.71 5.71 0 011.3 8c0-3.14 2.56-5.7 5.7-5.7zM7 1C3.14 1 0 4.14 0 8s3.14 7 7 7 7-3.14 7-7-3.14-7-7-7zm1 3H6v5h2V4zm0 6H6v2h2v-2z"></path></svg>
				<h4 class="media-body">
					{{ .Ticket.Summary }}
				</h4>
			</div>

			{{ if .Ticket.Components }}
			<div class="container border py-3 mb-3 bg-light">
				<div class="row">
					<div class="col-sm-3 text-center text-muted">Components:</div>
					<div class="col">
						{{ range $index, $tag := .Ticket.Components -}}
						<span class="badge badge-primary">{{ $tag }}</span>
						{{ end }}	
					</div>
				</div>
			</div>
			{{ end }}

			<h5>Description</h5>
			{{ if .Ticket.Description }}
			<blockquote class="blockquote">
				<pre style="white-space: pre-wrap;" class="small mx-2 pb-3 mb-4">{{ .Ticket.Description }}</pre>
			</blockquote>

			{{ else }}
			<p class="text-muted">[ no description ]</p>
			{{ end }}

			{{ if .Ticket.Attachments }}
			<h5 class="mt-3">Attachments</h5>
			{{ range $index, $file := .Ticket.Attachments }}
			<div id="attachment-{{ $file.SHA1 }}" class="media px-2 mt-3 mb-3">
				<svg class="mr-2 text-muted" xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file"><path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path><polyline points="13 2 13 9 20 9"></polyline></svg>
				<div class="media-body">
					<h6 class="mt-0 mb-1">{{ $file.Name }}</h6>
					<div>{{ $file.Size }}</div>
				</div>
			</div>
			{{ end }}
			{{ end }}

		</div>
	</div>
</div>